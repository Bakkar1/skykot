@inject SignInManager<CustomUser> signInManager;
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<nav class="navbar navbar-expand-xl navbar-light" style="background-color: #e3f2fd;">
    <a class="navbar-brand" href="#">Sky Kot</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-house-user"></i>@localizer["home-link"]</a>
	        </li>
	        <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Room" asp-action="Index"><i class="fa-solid fa-building"></i>@localizer["room-link"]</a>
	        </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa-solid fa-key"></i>@localizer["privacy-link"]</a>
            </li>
            @if (signInManager.IsSignedIn(User))
            {
                    @if (User.IsInRole(Roles.Renter))
                {  
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Renter" asp-action="Index"><i class="fa-solid fa-building-circle-arrow-right"></i>@localizer["renter-link"]</a>
                    </li>
                }
                @if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Owner))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="House" asp-action="Index"><i class="fa-solid fa-house"></i>@localizer["house-link"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="User" asp-action="Index"><i class="fa-solid fa-users"></i>@localizer["user-link"]</a>
                    </li>   
                        <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="RenterRoom" asp-action="Index"><i class="fa-solid fa-building-circle-arrow-right"></i>@localizer["renter-room-link"]</a>
                    </li>
                }
                @if (User.IsInRole(Roles.Admin))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="AcademicYear" asp-action="Index"><i class="fa-solid fa-calendar-days"></i>@localizer["academicyear-link"]</a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Profile"><i class="fa-solid fa-user-check"></i>@localizer["profile-link"]</a>
                </li>
                <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout"><i class="fa-solid fa-arrow-right-from-bracket"></i>@localizer["logout-link"]</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" data-link="Login" asp-controller="account" asp-action="Login">
                        <i class="fa-solid fa-arrow-right-to-bracket"></i>@localizer["login-link"]
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-link="Register" asp-controller="account" asp-action="Register">
                        <i class="fa-solid fa-right-to-bracket"></i>@localizer["register-link"]
                    </a>
                </li>
            }
            <li class="nav-link">
                <partial name="_Culture" />
            </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" disabled placeholder="@localizer["search-btn"]" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">@localizer["search-lbl"]</button>
        </form>
      </div>
</nav>