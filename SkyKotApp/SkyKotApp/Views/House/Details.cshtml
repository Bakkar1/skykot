@model KotClassLibrary.Models.House

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>House</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ZipCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ZipCode.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StreetName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StreetName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HouseNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HouseNumber)
        </dd>
    </dl>
</div>
 <div>
    <div>Specifications</div>
    @foreach (var spec in Model.HouseSpecifications)
    {
        <p>@spec.Specification.Description : @spec.IsAvailAble , @spec.WhereAvailAble</p>
    }
</div>
<div>
    <div>Expenses</div>
    @foreach (var expense in Model.HouseExpenses)
    {
        <p>@expense.Expence.Description : @expense.Value€</p>
    }
    <p>Extra Expenses : @Model.HouseExpenses.Sum(re =>re.Value)€</p>
</div>
<div>
    @if (Model.Rooms.Any())
    {
        <div>Ther is @Model.Rooms.Count() Rooms in this house</div>
        foreach(var room in Model.Rooms.Take(10))
        {
            <p>@room.RoomNumber , @room.RoomType</p>
        }
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.HouseId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
