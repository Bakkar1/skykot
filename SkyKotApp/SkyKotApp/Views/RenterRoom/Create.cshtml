@model KotClassLibrary.ViewModels.RenterRoomVM.RenterRoomCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center">Create New Renter Room</h2>
<hr />
<div class="row justify-content-center">
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="RoomId" class="control-label">Room</label>
                <select asp-for="RoomId" class ="form-control">
                    @foreach(var room in Model.Rooms)
                    {
                        <option value="@room.RoomId">@room.RoomNumber , @room.House.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">User</label>
                <select asp-for="Id" class ="form-control">
                    @foreach(var user in Model.CustomUsers)
                    {
                        <option value="@user.Id">@user.FirstName , @user.Email</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Academic Year</label>
                <select asp-for="AcademicYearId" class ="form-control">
                     @foreach(var year in Model.AcademicYears)
                    {
                        <option value="@year.AcademicYearId">@year.StartDate.ToLongDateString()</option>
                    }
                </select>
                <span asp-validation-for="AcademicYearId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="StartDate" class="control-label">Start Date</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="EndDate" class="control-label">End Date</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
